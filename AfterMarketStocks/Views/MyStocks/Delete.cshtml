@model AfterMarketStocks.Models.MyStocks

@{
    ViewBag.Title = "Sell";
}



<h3>Are you sure you want to sell this stock?</h3>
<div>
    
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.stock)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.stock)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.currentPrice)
        </dt>

        <dd>
            item.currentPrice = Classes.ApiStatic.GetCurrentPrice(item.symbol);
            @Html.DisplayFor(model => model.currentPrice)
            
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Sell" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
